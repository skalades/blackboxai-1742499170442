# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true

# PHP files
[*.php]
indent_style = space
indent_size = 4

# HTML files
[*.{html,htm}]
indent_style = space
indent_size = 2

# CSS files
[*.{css,scss,sass,less}]
indent_style = space
indent_size = 2

# JavaScript files
[*.{js,jsx,ts,tsx,vue}]
indent_style = space
indent_size = 2

# JSON files
[*.json]
indent_style = space
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# XML files
[*.xml]
indent_style = space
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
indent_style = space
indent_size = 2

# Configuration files
[*.{ini,conf}]
indent_style = space
indent_size = 2

# Database files
[*.sql]
indent_style = space
indent_size = 2

# Shell scripts
[*.sh]
indent_style = space
indent_size = 2
end_of_line = lf

# Batch files
[*.{cmd,bat}]
end_of_line = crlf

# Composer files
[composer.json]
indent_style = space
indent_size = 4

# Package files
[package.json]
indent_style = space
indent_size = 2

# Config files
[*.config.js]
indent_style = space
indent_size = 2

# Ignore files
[{.gitignore,.gitattributes,.editorconfig}]
indent_style = space
indent_size = 2

# Documentation files
[docs/**/*.md]
trim_trailing_whitespace = false

# Test files
[tests/**/*]
indent_style = space
indent_size = 4

# Vendor files
[{vendor,node_modules}/**]
indent_style = ignore
indent_size = ignore
trim_trailing_whitespace = ignore
insert_final_newline = ignore