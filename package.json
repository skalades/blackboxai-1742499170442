{
  "name": "alumni-tgp-portal",
  "version": "1.0.0",
  "description": "Portal Alumni Teknik Geologi Pertambangan SMKN 2 Garut",
  "private": true,
  "scripts": {
    "dev": "npm run development",
    "development": "mix",
    "watch": "mix watch",
    "watch-poll": "mix watch -- --watch-options-poll=1000",
    "hot": "mix watch --hot",
    "prod": "npm run production",
    "production": "mix --production",
    "build": "npm run production",
    "lint": "eslint resources/js/**/*.{js,vue}",
    "lint:fix": "eslint resources/js/**/*.{js,vue} --fix",
    "format": "prettier --write 'resources/**/*.{css,js,vue}'",
    "test": "jest"
  },
  "dependencies": {
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/typography": "^0.5.10",
    "autoprefixer": "^10.4.16",
    "axios": "^1.6.2",
    "chart.js": "^4.4.1",
    "dayjs": "^1.11.10",
    "lodash": "^4.17.21",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.3.6",
    "vue": "^3.3.11",
    "vue-router": "^4.2.5",
    "vuex": "^4.1.0"
  },
  "devDependencies": {
    "@babel/core": "^7.23.6",
    "@babel/preset-env": "^7.23.6",
    "@vue/compiler-sfc": "^3.3.11",
    "@vue/test-utils": "^2.4.3",
    "babel-jest": "^29.7.0",
    "browser-sync": "^2.29.3",
    "browser-sync-webpack-plugin": "^2.3.0",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-vue": "^9.19.2",
    "jest": "^29.7.0",
    "laravel-mix": "^6.0.49",
    "prettier": "^3.1.1",
    "sass": "^1.69.5",
    "sass-loader": "^13.3.2",
    "vue-jest": "^3.0.7",
    "vue-loader": "^17.3.1"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ],
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/username/alumni-tgp.git"
  },
  "keywords": [
    "alumni",
    "portal",
    "education",
    "networking",
    "jobs"
  ],
  "author": "Alumni TGP Development Team",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/username/alumni-tgp/issues"
  },
  "homepage": "https://github.com/username/alumni-tgp#readme",
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "vue"
    ],
    "transform": {
      "^.+\\.js$": "babel-jest",
      "^.+\\.vue$": "vue-jest"
    },
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/resources/js/$1"
    },
    "testEnvironment": "jsdom"
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "printWidth": 100
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true,
      "browser": true,
      "es2021": true
    },
    "extends": [
      "plugin:vue/vue3-recommended",
      "eslint:recommended",
      "prettier"
    ],
    "rules": {
      "vue/multi-word-component-names": "off"
    }
  }
}