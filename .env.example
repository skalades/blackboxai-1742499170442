# Application
APP_NAME="Alumni TGP Portal"
APP_ENV=local
APP_DEBUG=true
APP_URL=http://localhost:8000
APP_TIMEZONE=Asia/Jakarta
APP_LOCALE=id
APP_KEY=base64:your-32-character-key-here

# Database
DB_CONNECTION=mysql
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=alumni_tgp
DB_USERNAME=root
DB_PASSWORD=
DB_CHARSET=utf8mb4
DB_COLLATION=utf8mb4_unicode_ci

# Mail
MAIL_DRIVER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS=noreply@example.com
MAIL_FROM_NAME="${APP_NAME}"

# Session
SESSION_DRIVER=file
SESSION_LIFETIME=120
SESSION_SECURE_COOKIE=false
SESSION_COOKIE_NAME=alumni_tgp_session

# Cache
CACHE_DRIVER=file
CACHE_PREFIX=alumni_tgp_cache_

# Queue
QUEUE_CONNECTION=sync

# Security
JWT_SECRET=your-jwt-secret-key-here
ENCRYPTION_KEY=your-32-character-encryption-key
PASSWORD_PEPPER=your-password-pepper-here

# File Upload
UPLOAD_MAX_SIZE=5242880
ALLOWED_IMAGE_TYPES=jpg,jpeg,png,gif
ALLOWED_DOCUMENT_TYPES=pdf,doc,docx

# Chat
CHAT_WEBSOCKET_SERVER=ws://localhost:8080
CHAT_MESSAGE_LIMIT=100
CHAT_FILE_MAX_SIZE=2097152

# API
API_RATE_LIMIT=60
API_TOKEN_LIFETIME=86400
API_ALLOWED_ORIGINS=http://localhost:8000

# Social Media
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret
INSTAGRAM_CLIENT_ID=your-instagram-client-id
INSTAGRAM_CLIENT_SECRET=your-instagram-client-secret

# Push Notifications
PUSH_PUBLIC_KEY=your-push-public-key
PUSH_PRIVATE_KEY=your-push-private-key
PUSH_EMAIL=mailto:admin@example.com

# Analytics
GOOGLE_ANALYTICS_ID=your-ga-id
ENABLE_ERROR_REPORTING=true
ERROR_LOG_CHANNEL=daily

# Maintenance
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE="Site is under maintenance. Please check back later."
MAINTENANCE_ALLOWED_IPS=127.0.0.1

# Feature Flags
FEATURE_CHAT=true
FEATURE_JOBS=true
FEATURE_NOTIFICATIONS=true
FEATURE_EXPORT=true

# Development
DEBUGBAR_ENABLED=true
TELESCOPE_ENABLED=true
QUERY_DETECTOR_ENABLED=true
SEED_TEST_DATA=true

# Testing
TEST_DB_DATABASE=alumni_tgp_testing
TEST_MAIL_DRIVER=array
TEST_CACHE_DRIVER=array
TEST_SESSION_DRIVER=array
TEST_QUEUE_CONNECTION=sync

# Redis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Memcached
MEMCACHED_HOST=127.0.0.1
MEMCACHED_PORT=11211

# AWS
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# Pusher
PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_APP_CLUSTER=mt1
PUSHER_HOST=
PUSHER_PORT=443
PUSHER_SCHEME=https

# Logging
LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug
LOG_SLACK_WEBHOOK_URL=

# Sentry
SENTRY_LARAVEL_DSN=
SENTRY_TRACES_SAMPLE_RATE=1.0